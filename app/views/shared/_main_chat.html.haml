.main-chat
  .main-chat__group-info
    .current-group
      .current-group__group-name
        = @group.name
      .current-group__group-members
        - @group.users.each do |user|
          = user.name
    .edit-btn
    = link_to edit_group_path(@group), class: "edit-btn edit-btn--edit" do
      Edit
  .main-chat__message-list
    = render @messages
  .main-chat__message-form
    .form
      = form_for [@group, @message] do |f|
        .form__box
          =f.text_field :content, class: 'form__message', placeholder: 'type a message'
          .form__image
            =f.label :image, class: 'form__image__file' do
              =icon('far', 'image', class: 'icon')
              =f.file_field :image, class: 'hidden'
          =f.submit 'Send', class: 'form__submit-btn'